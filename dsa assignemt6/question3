#include <bits/stdc++.h>
using namespace std;

struct DNode { int data; DNode *next, *prev; DNode(int d):data(d),next(NULL),prev(NULL){} };
struct CNode { int data; CNode* next; CNode(int d):data(d),next(NULL){} };

int sizeDoubly(DNode* head) {
    int c = 0;
    while (head) { c++; head = head->next; }
    return c;
}
int sizeCircular(CNode* head) {
    if (!head) return 0;
    int c = 0;
    CNode* temp = head;
    do { c++; temp = temp->next; } while (temp != head);
    return c;
}

int main() {
    DNode* d1 = new DNode(1); d1->next = new DNode(2); d1->next->prev = d1;
    cout << sizeDoubly(d1) << endl;
    CNode* c1 = new CNode(10); c1->next = new CNode(20); c1->next->next = c1;
    cout << sizeCircular(c1) << endl;
}
