#include <bits/stdc++.h>
using namespace std;

void improvedSelectionSort(vector<int>& a) {
    int n = a.size();
    for (int i = 0, j = n - 1; i < j; i++, j--) {
        int minIndex = i, maxIndex = i;
        for (int k = i; k <= j; k++) {
            if (a[k] < a[minIndex]) minIndex = k;
            if (a[k] > a[maxIndex]) maxIndex = k;
        }
        swap(a[i], a[minIndex]);
        if (maxIndex == i) maxIndex = minIndex;
        swap(a[j], a[maxIndex]);
    }
}

int main() {
    vector<int> a = {64, 25, 12, 22, 11, 90, 45};
    improvedSelectionSort(a);
    for (int x : a) cout << x << " ";
}
