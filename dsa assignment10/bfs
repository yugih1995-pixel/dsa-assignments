#include <bits/stdc++.h>
using namespace std;

void bfs(int V, vector<int> adj[], int start) {
    vector<int> vis(V, 0);
    queue<int> q;
    q.push(start);
    vis[start] = 1;
    while (!q.empty()) {
        int node = q.front(); q.pop();
        cout << node << " ";
        for (auto x : adj[node])
            if (!vis[x]) {
                vis[x] = 1;
                q.push(x);
            }
    }
}

int main() {
    int V = 5;
    vector<int> adj[V];
    adj[0] = {1, 2};
    adj[1] = {0, 3};
    adj[2] = {0, 4};
    adj[3] = {1};
    adj[4] = {2};
    bfs(V, adj, 0);
}
