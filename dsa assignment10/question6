#include <bits/stdc++.h>
using namespace std;

void dijkstra(int V, vector<vector<pair<int,int>>>& adj, int src) {
    vector<int> dist(V, INT_MAX);
    dist[src] = 0;
    priority_queue<pair<int,int>, vector<pair<int,int>>, greater<pair<int,int>>> pq;
    pq.push({0, src});
    while (!pq.empty()) {
        int d = pq.top().first;
        int u = pq.top().second;
        pq.pop();
        for (auto [v, w] : adj[u]) {
            if (d + w < dist[v]) {
                dist[v] = d + w;
                pq.push({dist[v], v});
            }
        }
    }
    for (int i = 0; i < V; i++) cout << dist[i] << " ";
}

int main() {
    int V = 5;
    vector<vector<pair<int,int>>> adj(V);
    adj[0] = {{1, 10}, {4, 5}};
    adj[1] = {{0, 10}, {2, 1}, {4, 2}};
    adj[2] = {{1, 1}, {3, 4}};
    adj[3] = {{2, 4}, {4, 3}};
    adj[4] = {{0, 5}, {1, 2}, {3, 3}};
    dijkstra(V, adj, 0);
}
