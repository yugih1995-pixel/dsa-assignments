#include <bits/stdc++.h>
using namespace std;

void heapify(vector<int>& a, int n, int i, bool increasing) {
    int extreme = i;
    int l = 2 * i + 1, r = 2 * i + 2;
    if (increasing) {
        if (l < n && a[l] > a[extreme]) extreme = l;
        if (r < n && a[r] > a[extreme]) extreme = r;
    } else {
        if (l < n && a[l] < a[extreme]) extreme = l;
        if (r < n && a[r] < a[extreme]) extreme = r;
    }
    if (extreme != i) {
        swap(a[i], a[extreme]);
        heapify(a, n, extreme, increasing);
    }
}

void heapSort(vector<int>& a, bool increasing = true) {
    int n = a.size();
    for (int i = n / 2 - 1; i >= 0; i--) heapify(a, n, i, increasing);
    for (int i = n - 1; i > 0; i--) {
        swap(a[0], a[i]);
        heapify(a, i, 0, increasing);
    }
    if (!increasing) reverse(a.begin(), a.end());
}

int main() {
    vector<int> a = {12, 11, 13, 5, 6, 7};
    heapSort(a, true);
    for (int x : a) cout << x << " ";
    cout << endl;
    vector<int> b = {12, 11, 13, 5, 6, 7};
    heapSort(b, false);
    for (int x : b) cout << x << " ";
}
